{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Processor": {
    "IntervalMinutes": 1
  },
  "Repository": {
    "DatabasePath": "jobs_db.json",
    "DatabasePathLinux": "/volume1/Apps/renamee/data/jobs_db.json"
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "Override": {
      "Microsoft.AspNetCore": "Warning"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/volume1/Apps/renamee/logs/renamee.log",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": "1048576",
          "rollOnFileSizeLimit": "true",
          "retainedFileCountLimit": "10"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ]
  }
}
