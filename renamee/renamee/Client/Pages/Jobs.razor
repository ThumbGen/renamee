@page "/jobs"
@using renamee.Shared
@using renamee.Shared.DTOs
@inject HttpClient Http

<PageTitle>Jobs list</PageTitle>

<h1>Jobs</h1>


@if (jobs == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Source folder</th>
                <th>Dest folder</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in jobs)
            {
                <tr>
                    <td>@job.LastExecutedOn.ToLocalTime()</td>
                    <td>@job.Name</td>
                    <td>@job.Options.SourceFolder</td>
                    <td>@job.Options.DestinationFolder</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private JobDto[]? jobs;

    protected override async Task OnInitializedAsync()
    {
        jobs = await Http.GetFromJsonAsync<JobDto[]>("Jobs");
    }
}
